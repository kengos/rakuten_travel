<div class="search-box panel panel-default">
<div class="panel-body">
<%= search_form_for @search, url: admin_charges_path, method: :get, role: 'form' do |f| %>
  <div class="form-group">
    <div class="input-group col-md-4">
      <%= f.text_field :hotel_long_name_or_hotel_short_name_cont, class: 'form-control', placeholder: Hotel.human_attribute_name(:name) %>
      <span class="input-group-btn">
        <button type="submit" class="btn btn-default"><%= icon('search') %></button>
      </span>
    </div>
  </div>
  <div class="form-group last-form-group">
    <div class="row">
      <div class="col-md-4">
        <div class="input-group">
          <%= f.number_field :amount_gteq, min: 0, class: 'form-control input-sm', placeholder: '料金' %>
          <span class="input-group-addon">円以上</span>
          <%= f.number_field :amount_lteq, min: 0, class: 'form-control input-sm', placeholder: '料金' %>
          <span class="input-group-addon">円以下</span>
        </div>
      </div>
      <div class="col-md-4">
        <div class="input-group">
          <%= f.text_field :stay_day_gteq, class: 'form-control input-sm', maxlength: 10, placeholder: '宿泊日' %>
          <span class="input-group-addon">から</span>
          <%= f.text_field :stay_day_lteq, class: 'form-control input-sm', maxlength: 10, placeholder: '宿泊日' %>
          <span class="input-group-addon">まで</span>
        </div>
      </div>
      <div class="col-md-2">
        <div class="input-group">
          <label for="q_can_stay_true" class="checkbox-inline">
            <%= f.check_box :can_stay_true %>
            <%= Charge.human_attribute_name(:can_stay) %>
          </label>
        </div>
      </div>

    </div>
  </div>

<% end -%>
</div>
</div>