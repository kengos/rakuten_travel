<% title t('.title') %>
<%= render partial: '/shared/navigation' %>
<div class="search-box clearfix">
<div class="col-md-6">
<%= search_form_for @search, url: admin_hotels_path, method: :get, role: 'form' do |f| %>
  <div class="form-group">
    <%= f.collection_select :area_id_eq, Area.select(:id, :long_name).load, :id, :long_name, {prompt: t('activerecord.models.area')}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <div class="input-group">
      <%= f.text_field :long_name_or_short_name_cont, class: 'form-control col-md-4', placeholder: Hotel.human_attribute_name(:name) %>
      <span class="input-group-btn">
        <button type="submit" class="btn btn-default"><%= icon('search') %></button>
      </span>
    </div>
  </div>
<% end -%>
</div>
</div>
<br class="clearfix">
<ul class="media-list">
  <% @hotels.each do |hotel| -%>
  <li class="media" style="border-bottom:1px solid #eee;">
    <p class="pull-left"><%= hotel.image %></p>
    <p class="pull-left"><%= hotel.enable_label %></p>
    <p class="pull-right">
      <%= show_link(hotel) %>
      <%= destroy_link(hotel) %>
    </p>
    <div class="media-body">
      <h4 class="media-heading">[<%= hotel.no %>]&nbsp;<%= hotel.link %></h4>
      <%= hotel.postal_code %>&nbsp;<%= hotel.address1 %><%= hotel.address2 %>(<%= hotel.google_map_link %>)<br>
      <%= hotel.access %>
    </div>
  </li>
  <% end -%>
</ul>
<%= paginate @hotels %>