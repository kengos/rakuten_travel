<%= horizontal_form_for(resource, control_col: "col-md-4") do |f| %>
  <%= f.collection_select :area_id, Area.select(:id, :long_name).load, :id, :long_name,  control_col: "col-md-8" %>
  <%= f.text_field :no, maxlength: 32 %>
  <%= f.text_field :long_name, maxlength: 255, control_col: "col-md-8" %>
  <%= f.text_field :short_name, maxlength: 32 %>
  <%= f.text_field :postal_code, maxlength: 8, control_col: "col-md-2" %>
  <%= f.text_field :address1, maxlength: 64 %>
  <%= f.text_field :address2, maxlength: 255, control_col: "col-md-8" %>
  <%= f.text_field :telephone_no, maxlength: 32, control_col: "col-md-2" %>
  <%= f.text_field :url, maxlength: 512, control_col: "col-md-10" %>
  <%= f.text_field :hotel_image_url, maxlength: 512, control_col: "col-md-10" %>
  <%= f.text_area :access, rows: 2, control_col: "col-md-10" %>
  <%= f.text_field :latitude, maxlength: 16, control_col: "col-md-2" %>
  <%= f.text_field :longitude, maxlength: 16, control_col: "col-md-2" %>
  <%= f.number_field :room_num, max: 9999, min: 0, control_col: "col-md-2" %>
  <%= f.form_group do %>
    <%= f.check_box :enabled %>
  <% end %>
  <%= f.form_group do %>
    <%= f.primary %>
  <% end %>
<% end %>