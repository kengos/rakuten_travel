<% title t('.title') %>
<div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
  <%= render_flash_messages %>
  <div class="panel panel-default">
    <div class="panel-heading"><%= t('.title') %></div>
    <div class="panel-body">
      <%= form_tag admin_sessions_path, class: 'form-horizontal', role: 'form', method: 'POST' do%>
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <div class="col-sm-8 col-sm-offset-2">
            <%= email_field_tag 'email', params[:email], class: 'form-control', placeholder: t('.email'), autocomplete: 'off' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8 col-sm-offset-2">
            <%= password_field_tag 'password', nil, class: 'form-control', placeholder: t('.password'), autocomplete: 'off' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default"><%= t('.signin') %></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>