<div class="row">
<div class="col-md-3 col-sm-12">
  <ul class="nav nav-pills margin-b2">
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <%= area ? area.short_name : t('global.all_areas') %><span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t('global.all_areas'), front_hotels_path, class: area ? '' : 'active' %></li>
      <% areas.each do |area| %>
        <li><%= link_to area.name, areas_front_hotels_path(area.uri_escaped_name), class: area.try(:id) == area.id ? 'active' : '' %></li>
      <% end -%>
      </ul>
    </li>
  </ul>
</div>
<div class="col-md-5 col-md-offset-4 col-sm-12">
  <%= form_tag area ? areas_front_hotels_path(@area.uri_escaped_name) : front_hotels_path, method: :get, class: "form-inline", role: "form" do %>
    <div class="form-group">
      <div class="input-group col-md-12">
        <%= text_field_tag :q, query, class: 'form-control', placeholder: Hotel.human_attribute_name(:name) %>
        <span class="input-group-btn">
          <button type="submit" class="btn btn-default"><%= icon('search') %></button>
        </span>
      </div>
    </div>
  <% end -%>
</div>
</div>